rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Files are accessible to all users for reading
    match /{allPaths=**} {
      allow read: if true;
      // Only admin users can upload, update, or delete files
      allow write, create, delete: if request.auth.token.admin == true;
    }
    
    // Allow users to upload their profile images
    match /users/{userId}/profile.jpg {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 