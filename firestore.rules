rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents
    match /{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth.token.admin == true;
    }
    
    // Additional rules for specific collections can be added here
    
    // Example: Allow users to read and write their own user data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 